{
  "compilerOptions": {
    "outDir": "./lib/commonjs",
    "module": "CommonJS",
    "target": "ES2015",
    "declaration": true,
    "declarationDir": "./lib/typescript/src",
    "noEmit": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["ESNext"],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "src/**/__tests__", "example", "lib"]
}
